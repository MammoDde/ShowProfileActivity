<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="it.polito.showprofileactivity.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_check"
            app:destination="@id/nav_check" />
        <action
            android:id="@+id/action_nav_home_to_editProfileActivity"
            app:destination="@id/nav_edit_profile" />
        <action
            android:id="@+id/action_nav_home_to_editProfileFragment"
            app:destination="@id/nav_edit_profile" />
        <action
            android:id="@+id/action_nav_home_to_advListFragment"
            app:destination="@id/nav_adv_list" />
    </fragment>
    <fragment
        android:id="@+id/nav_check"
        android:name="it.polito.showprofileactivity.EditCheck"
        android:label="Fragment check" />
    <fragment
        android:id="@+id/nav_edit_profile"
        android:name="it.polito.showprofileactivity.EditProfileFragment"
        android:label="Edit Profile" />
    <fragment
        android:id="@+id/nav_adv_list"
        android:name="it.polito.showprofileactivity.TimeSlotListFragment"
        android:label="My time slots" >
        <action
            android:id="@+id/action_nav_adv_list_to_nav_slot_details"
            app:destination="@id/nav_slot_details" />
        <action
            android:id="@+id/action_nav_adv_list_to_timeSlotEditFragment"
            app:destination="@id/timeSlotEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_slot_details"
        android:name="it.polito.showprofileactivity.TimeSlotDetailsFragment"
        android:label="Time slot details" >
        <action
            android:id="@+id/action_nav_slot_details_to_timeSlotEditFragment"
            app:destination="@id/timeSlotEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/timeSlotEditFragment"
        android:name="it.polito.showprofileactivity.TimeSlotEditFragment"
        android:label="Edit time slot" />

</navigation>